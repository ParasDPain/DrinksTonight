<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_gradient"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/labelintro"
        android:text="@string/intro"
        android:textColor="@android:color/white"
        android:textSize="@dimen/activity_title_text"
        android:paddingTop="@dimen/activity_custom_margin"
        android:paddingBottom="@dimen/activity_custom_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

<RelativeLayout
    android:id="@+id/buttonbox"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_centerInParent="true"
    android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/buttonmain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:text="@string/button_main"
        android:textSize="@dimen/activity_btn_text"
        android:onClick="buttonOnClick"
        android:background="@drawable/btn_selector"/>

    </RelativeLayout>

    <!--<Button
        android:id="@+id/buttonresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/button_result"
        android:textColor="#ffffff"
        android:onClick="buttonResultPass"/> -->


</RelativeLayout>
